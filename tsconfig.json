{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@screens": ["./src/screens"],
      "@components": ["./src/components"],
      "@utils": ["./src/utils"],
      "@store": ["./src/store"],
      "@types": ["./src/types"],
      "@enums": ["./src/enums"],
      "@errors": ["./src/errors"],
      "@configs": ["./src/configs"],
      "@constants": ["./src/constants"],
      "@global": ["./src/global"],
      "@context": ["./src/context"],
      "@service": ["./src/service"]
    }
  },
  "exclude": ["node_modules", "babel.config.js"],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "index.ts"]
}
